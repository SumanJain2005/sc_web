---
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
import  NextCard from "~/components/feature-card.tsx";

const features: Array<FeatureItem> = [
  {
    title: 'Prof. Suman Bhattacharya',
    description:"CSBS HOD",
    image: "https://res.cloudinary.com/dobf4epbw/image/upload/v1709828052/beeqwsteiokv9ywwcnry.webp",
  },
  {
    title: "Dr. Nayan Ranjan Das",
    description:"Faculty Advisor",
      image: "https://res.cloudinary.com/dobf4epbw/image/upload/v1709828048/be62bqrezt6w0iodyf3z.webp",
  },
  {
    title: "Prof. Suman Goswami",
    description:"Co-Advisor and Financial Associate.",
      image: "https://res.cloudinary.com/dobf4epbw/image/upload/v1709828050/fklis7cd8lvfhqd0ql3y.webp",
  }
];
---


  <ContentSection title="Teachers" id="features" >

    <div class="grid max-w-6xl max-h-6xl grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-3 ">
      {
        features.map(({ title, description, image }) => (
          <NextCard 
            client:visible
            title={title}
            description={description}
            image={image}
           />
        ))
      }
    </div>
</ContentSection>