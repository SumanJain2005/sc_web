---
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
import  NextCard from "~/components/feature-card.tsx";

const features: Array<FeatureItem> = [
  {
    title: 'Prof. Suman Bhattacharya',
    description:"CSBS HOD",
    image: "/teachers/SNBSir.webp",
  },
  {
    title: "Dr. Nayan Ranjan Das",
    description:"Faculty Advisor",
      image: "/teachers/NRDSir.webp",
  },
  {
    title: "Prof. Suman Goswami",
    description:"Co-Advisor and Financial Associate.",
      image: "/teachers/SGSir.webp",
  }
];
---


  <ContentSection title="Teachers" id="features" >

    <ul class="grid max-w-6xl max-h-6xl grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-3 ">
      {
        features.map(({ title, description, image }) => (
          <NextCard 
            client:visible
            title={title}
            description={description}
            image={image}
           />
        ))
      }
    </ul>
</ContentSection>